<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/search_txt_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Id:"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/search_description"
        app:layout_constraintStart_toStartOf="@+id/search_description"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_txt_result_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Result type:"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/search_description"
        app:layout_constraintStart_toStartOf="@+id/search_description"
        app:layout_constraintTop_toBottomOf="@+id/search_txt_id" />

    <ImageView
        android:id="@+id/search_img_result"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/search_title"
        app:layout_constraintEnd_toEndOf="@+id/search_description"
        app:layout_constraintStart_toStartOf="@+id/search_description"
        app:layout_constraintTop_toBottomOf="@+id/search_txt_result_type"
        app:srcCompat="@drawable/lock" />

    <TextView
        android:id="@+id/search_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Title:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/search_description"
        app:layout_constraintEnd_toEndOf="@+id/search_description"
        app:layout_constraintStart_toStartOf="@+id/search_description" />

    <TextView
        android:id="@+id/search_description"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Description: "
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/search_progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/search_img_result"
        app:layout_constraintEnd_toEndOf="@+id/search_img_result"
        app:layout_constraintStart_toStartOf="@+id/search_img_result"
        app:layout_constraintTop_toTopOf="@+id/search_img_result" />

</androidx.constraintlayout.widget.ConstraintLayout>
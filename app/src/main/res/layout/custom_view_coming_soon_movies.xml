<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/margin_Right_20dp">

    <ImageView
        android:id="@+id/coming_poster_film"
        android:layout_width="180dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coming_lbl_title_film"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Hitman 's Wife's Boyguard"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/coming_poster_film"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coming_lbl_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="3.6"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/coming_poster_film"
        app:layout_constraintTop_toBottomOf="@+id/coming_lbl_title_film" />

    <RatingBar
        android:id="@+id/coming_ratingBar"
        style="@android:style/Widget.Holo.Light.RatingBar.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:max="5"
        android:numStars="5"
        android:progressTint="@color/tangerine_yellow"
        android:rating="3"
        app:layout_constraintStart_toEndOf="@+id/coming_lbl_rating"
        app:layout_constraintTop_toTopOf="@+id/coming_lbl_rating" />

    <TextView
        android:id="@+id/coming_lbl_genres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="Action, Adventure, Drama, Sci-Fi"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/coming_poster_film"
        app:layout_constraintTop_toBottomOf="@+id/coming_ratingBar" />

    <TextView
        android:id="@+id/coming_lbl_plot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="Feature adaptation of Frank Herbert's science fiction novel, about the son of a noble family entrusted with the protection of the most valuable asset and most vital element in the galaxy."
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/coming_poster_film"
        app:layout_constraintTop_toBottomOf="@+id/coming_lbl_genres"
        app:layout_constraintVertical_bias="1.0" />

    <ProgressBar
        android:id="@+id/coming_progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/coming_poster_film"
        app:layout_constraintEnd_toEndOf="@+id/coming_poster_film"
        app:layout_constraintStart_toStartOf="@+id/coming_poster_film"
        app:layout_constraintTop_toTopOf="@+id/coming_poster_film" />

</androidx.constraintlayout.widget.ConstraintLayout>